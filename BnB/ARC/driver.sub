#!/bin/bash                                                                                                                                                                       

# -----------------------------------------------------------------------------                                                                                                   
# job options                                                                                                                                                                     
# -----------------------------------------------------------------------------                                                                                                   

# job name                                                                                                                                                                        
#SBATCH --job-name=parametric                                                                                                                                                        

